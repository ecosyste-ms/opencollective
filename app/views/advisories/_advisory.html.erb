<div class="card mb-3">
  <div class="card-body">
    <% if advisory.severity %>
      <small class='badge bg-<%= severity_class(advisory.severity) %> float-end'>
        <%= advisory.severity.humanize %>
      </small>
    <% end %>
    <h5 class="card-title">
      <% if @project.nil? %>
        <%= link_to advisory.project.name, project_path(advisory.project_id) %>:
      <% end %>
      <% if advisory.url.present? %>
        <%= link_to advisory, advisory.url, target: :_blank %>
      <% else %>
        <%= advisory %>
      <% end %>
    </h5>

    <%= advisory.title %><br>

    <small class='text-muted'>
      Ecosystems: <%= advisory.ecosystems.join(', ') %><br>
      Packages: <%= advisory.package_names.join(', ') %><br>
      Source: <%= advisory.source %><br>
      <% if advisory.published_at.present? %>
        <span title="<%= advisory.published_at %>">Published: <%= time_ago_in_words advisory.published_at %> ago</span>
      <% end %>
    </small>
  </div>
</div>