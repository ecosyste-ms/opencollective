<% @meta_title = "#{@project} issues" %>
<% @meta_description = "Issues and Pull Requests for #{@project}" %>

<div class="container-md">

  <%= render 'nav' %>

  <h1>
    <%= @project.to_s %>
  </h1>

  <p>
    <%= @project.description %> <br/>
    <%= link_to @project.url, @project.url %>
  </p>

  <%= render partial: 'project_nav', locals: {active: 'issues'} %>

  <% if @pagy.count > 0 %>
    <%= render @issues %>
    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
  <% else %>
    <p>
      No issues found.
    </p>
  <% end %>
</div>